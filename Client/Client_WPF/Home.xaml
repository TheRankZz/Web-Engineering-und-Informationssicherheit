<Page x:Class="Client_WPF.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Home" Background="Black">

    <Grid Width="300" Height="300" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button x:Name="btnSendPage" Content="Nachricht verschicken" HorizontalAlignment="Left" VerticalAlignment="Top" Width="280" Margin="10,98,0,0" Click="btnSendPage_Click" />
        <Button x:Name="btnReadPage" Content="Nachrichten abrufen" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="280" Margin="10,0,0,129" Click="btnReadPage_Click" />
        <Label x:Name="lblWelcome" Content="[Willkommen]"  HorizontalAlignment="left" VerticalAlignment="Top" Margin="10,32,0,0" Width="280" FontWeight="Bold" FontSize="18.667"/>
        <Button x:Name="btnLogout" Content="Abmelden" HorizontalAlignment="Left" Margin="10,198,0,0" VerticalAlignment="Top" Width="280" Click="btnLogout_Click"/>

    </Grid>
</Page>
