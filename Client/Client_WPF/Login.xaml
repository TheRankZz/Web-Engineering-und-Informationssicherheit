<Page x:Class="Client_WPF.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Page1">

    <Grid Background="#FF0A0A0A" Height="230" VerticalAlignment="Center" Width="300">
        <TextBox x:Name="txtUsername" Height="23" Margin="10,45,10,0" TextWrapping="Wrap" Text="Benutzername" VerticalAlignment="Top" ToolTip="Benutzername" />
        <Button x:Name="btnLogin" Content="Anmelden" HorizontalAlignment="Left" Margin="10,132,0,0" VerticalAlignment="Top" Width="280" Height="24" Background="{x:Null}" Click="btnLogin_Click"/>
        <Button x:Name="btnRegister" Content="Registrieren" VerticalAlignment="Top" RenderTransformOrigin="4.98,0.894" Margin="10,178,10,0" Height="24" Background="{x:Null}" Click="btnRegister_Click"/>


        <PasswordBox x:Name="txtPwd" HorizontalAlignment="Left" Height="23"  Margin="10,90,0,0" VerticalAlignment="Top"  Password="Password" ToolTip="Passwort" Width="280" />
        <Label x:Name="label" Content="Willkommen" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="91,0,85,0" FontWeight="Bold" FontSize="18.667" Width="124"/>

    </Grid>
</Page>
